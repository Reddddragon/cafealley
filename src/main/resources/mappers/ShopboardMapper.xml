<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.spring.cafealley.shopboard.mapper.IShopboardMapper">
  
  

  
  
  
  
  <insert id="regist">
  INSERT INTO shopboard
  (bno, title, userid, content, prono, prono2, prono3, prono4) 
  VALUES(shopbno_seq.NEXTVAL, #{title}, #{userid}, #{content}, #{prono}, #{prono2}, #{prono3}, #{prono4})
  </insert>
  
  <select id="getList" resultType="com.spring.cafealley.command.ShopboardVO">
  SELECT * FROM shopboard
  </select>
  
  <select id="getContent" resultType="com.spring.cafealley.command.ShopboardVO">
  SELECT * FROM shopboard
  WHERE bno = #{bno}
  </select>
  
  <!-- shopboard의 게시글 수정페이지 안만들어서 어떻게 해야할지 고민중..
  수정페이지는 수정할 때 상품은 바꾸지 못하고, 글 제목과 내용만 수정하도록 할 것이라고 일단정해둠 -->
  <update id="modify">
  UPDATE shopboard
  SET title = #{title}, content = #{content}
  WHERE bno = #{bno}
  </update>
  
  <delete id="delete">
  DELETE FROM shopboard
  WHERE bno = #{bno}
  </delete>
  
  
  </mapper>